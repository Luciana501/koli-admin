rules_version = '2';

// Firebase Storage Security Rules for KOLI Admin
service firebase.storage {
  match /b/{bucket}/o {
    
    // Receipt images - readable by any authenticated user (admins)
    match /receipts/{userId}/{fileName} {
      // Allow authenticated users (admins) to read receipt images
      allow read: if request.auth != null;
      
      // Allow users to upload their own receipts (from mobile app)
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chat attachments - allow authenticated admin users to upload and read
    match /chat-attachments/{fileName} {
      // Allow authenticated admin users to read and write chat attachments
      allow read, write: if request.auth != null;
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
